<h1 class="text-xl">Please enter your email</h1>

<form class="flex flex-col pt-4" autocomplete="off" action="/interaction/<%= uid %>/login" method="post">
  <div class="mb-2">
    <label for="login" class="block text-sm leading-5 font-medium text-gray-700">Email</label>
    <div class="mt-1 relative rounded-md shadow-sm border-solid border
    border-grey-500 px-4 py-2">
      <input required type="text" name="login" id="login" class="form-input
      block w-full sm:leading-5 text-gray-800" placeholder="example@email.com" <% if (!params.login_hint) { %>autofocus="on"<% } else { %> value="<%= params.login_hint %>" <% } %>
      <% if (!email) { %>value=""<% } else { %> value="<%= email %>" <% } %>>
    </div>
  <% if (error) { %><span class="leading-5 text-red-500 text-sm"><%= error %></span><% } %>
  </div>

  <span class="flex w-full rounded-md shadow-sm sm:w-auto mt-6">
    <button type="submit" class="inline-flex justify-center w-full rounded-md
    border border-transparent px-4 py-2 bg-indigo-600 text-large leading-6
    font-medium text-white shadow-sm hover:bg-indigo-500 focus:outline-none
    focus:border-indigo-700 focus:shadow-outline-indigo transition ease-in-out
    duration-150 sm:text-base sm:leading-5">
      Continue
    </button>
  </span>
</form>
